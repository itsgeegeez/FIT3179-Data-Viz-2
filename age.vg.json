{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/itsgeegeez/FIT3179-Data-Viz-2/refs/heads/main/data/voters_ge15.csv"
    },
    "background": "transparent",
    "params": [
        {
            "name": "dun_selection",
            "value": "N.31 Subang Jaya"
        }
    ],
    "spacing": 0,
    "transform": [
        { "filter": "datum.dun == dun_selection" },
        {
            "fold": [
                "male_18_20",
                "male_21_29",
                "male_30_39",
                "male_40_49",
                "male_50_59",
                "male_60_69",
                "male_70_79",
                "male_80_89",
                "male_90+",
                "female_18_20",
                "female_21_29",
                "female_30_39",
                "female_40_49",
                "female_50_59",
                "female_60_69",
                "female_70_79",
                "female_80_89",
                "female_90+"
            ],
            "as": ["age_gender", "value"]
        },
        {
            "calculate": "split(datum.age_gender, '_')[0] == 'male' ? 'Male' : 'Female'",
            "as": "gender"
        },
        {
            "calculate": "split(datum.age_gender, '_')[1] == '90+' ? '90+' : split(datum.age_gender, '_')[1] + '-' + (parseInt(split(datum.age_gender, '_')[2]))",
            "as": "age_group"
        }
    ],
    "hconcat": [
        {
            "transform": [
                {
                    "filter": {
                        "field": "gender",
                        "equal": "Male"
                    }
                }
            ],
            "mark": {
                "type": "bar"
            },
            "title": "Male",
            "height": 256,
            "width": 544,
            "encoding": {
                "y": {
                    "field": "age_group",
                    "type": "ordinal",
                    "title": "Age Group",
                    "sort": "descending",
                    "axis": null
                },

                "x": {
                    "field": "value",
                    "type": "quantitative",
                    "title": "Number of Voters",
                    "sort": "descending"
                },
                "color": {
                    "value": "#010066"
                },
                "tooltip": [
                    { "field": "dun", "type": "nominal", "title": "Constituency" },
                    { "field": "age_group", "type": "ordinal", "title": "Age Group" },
                    { "field": "gender", "type": "nominal", "title": "Gender" },
                    { "field": "value", "type": "quantitative", "title": "Number of Voters", "format": ",.0f" }
                ]
            }
        },
        {
            "view": {
                "stroke": null
            },
            "height": 256,
            "width": 48,
            "mark": {
                "type": "text",
                "align": "center",
                "fontSize": 12
            },
            "encoding": {
                "y": { "field": "age_group", "type": "ordinal", "axis": null, "sort": "descending" },
                "text": { "field": "age_group", "type": "ordinal" }
            }
        },
        {
            "transform": [
                {
                    "filter": {
                        "field": "gender",
                        "equal": "Female"
                    }
                }
            ],
            "mark": {
                "type": "bar"
            },
            "height": 256,
            "width": 544,
            "title": "Female",
            "encoding": {
                "y": {
                    "field": "age_group",
                    "type": "ordinal",
                    "title": "Age Group",
                    "sort": "descending",
                    "axis": null
                },
                "x": {
                    "field": "value",
                    "type": "quantitative",
                    "title": "Number of Voters"
                },
                "color": {
                    "value": "#010066"
                },
                "tooltip": [
                    { "field": "dun", "type": "nominal", "title": "Constituency" },
                    { "field": "age_group", "type": "ordinal", "title": "Age Group" },
                    { "field": "gender", "type": "nominal", "title": "Gender" },
                    { "field": "value", "type": "quantitative", "title": "Number of Voters", "format": ",.0f" }
                ]
            }
        }
    ],
    "config": {
        "view": { "stroke": null },
        "axis": { "grid": false, "labelFontSize": 12, "labelSeparation": 1, "titleFontSize": 14 },
        "legend": { "titleFontSize": 14, "labelFontSize": 12 }
    }
}
