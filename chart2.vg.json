{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/itsgeegeez/FIT3179-Data-Viz-2/refs/heads/main/data/census_dun.csv"
    },
    "background": "transparent",
    "width": "container",
    "height": 256,
    "params": [
        {
            "name": "dun_selection",
            "value": "N.31 Subang Jaya"
        }
    ],
    "transform": [
        { "filter": "datum.dun == dun_selection" },
        {
            "fold": [
                "ethnicity_proportion_bumi",
                "ethnicity_proportion_chinese",
                "ethnicity_proportion_indian",
                "ethnicity_proportion_other"
            ],
            "as": ["ethnicity", "value"]
        },
        {
            "window": [{ "op": "rank", "as": "rank" }],
            "sort": [{ "field": "value", "order": "ascending" }]
        },
        {
            "calculate": "datum.ethnicity == 'ethnicity_proportion_bumi' ? 'Bumi' : datum.ethnicity == 'ethnicity_proportion_chinese' ? 'Chinese' : datum.ethnicity == 'ethnicity_proportion_indian' ? 'Indian' : 'Other'",
            "as": "ethnicity"
        },
        {
            "calculate": "datum.value + '%'",
            "as": "percentageWithSuffix"
        }
    ],
    "title": {
        "text": "Ethnicity",
        "fontSize": 16
    },
    "encoding": {
        "theta": {
            "field": "value",
            "type": "quantitative",
            "title": "Population",
            "stack": true,
            "sort": {
                "field": "rank"
            }
        },
        "order": { "field": "rank", "type": "quantitative" },
        "color": {
            "field": "ethnicity",
            "title": "Ethnicity",
            "type": "nominal",
            "legend": {
                "orient": "bottom"
            },
            "scale": {
                "range": ["#cc0001", "#ffcc00", "#010066", "#7ed6ea"]
            }
        },
        "tooltip": [
            { "field": "dun", "type": "nominal", "title": "Constituency" },
            { "field": "ethnicity", "type": "nominal", "title": "Ethnicity" },
            {
                "field": "percentageWithSuffix",
                "type": "nominal",
                "title": "Population (%)"
            }
        ]
    },
    "layer": [
        {
            "mark": {
                "type": "arc",
                "radius": 96,
                "innerRadius": 48,
                "cornerRadius": 8
            }
        }
    ],
    "config": {
        "view": { "stroke": null },
        "axis": { "grid": false },
        "legend": { "titleFontSize": 14, "labelFontSize": 12 }
    }
}
