{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": { "url": "https://raw.githubusercontent.com/itsgeegeez/FIT3179-Data-Viz-2/refs/heads/main/data/results_parlimen_ge15.csv" },
    "transform": [
        {
            "aggregate": [
                {
                    "op": "mean",
                    "field": "majoriti",
                    "as": "average_majoriti"
                }
            ],
            "groupby": ["state"]
        },
        {
            "window": [
                {
                    "op": "rank",
                    "as": "rank"
                }
            ],
            "sort": [{ "field": "average_majoriti", "order": "descending" }]
        }
    ],
    "width": "container",
    "background": "transparent",
    "height": "container",
    "autosize": "fit",
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "y": {
                    "field": "state",
                    "type": "nominal",
                    "sort": "-x",
                    "title": "State",
                    "axis": {
                        "labelFontSize": 12,
                        "titleFontSize": 14
                    }
                },
                "x": {
                    "field": "average_majoriti",
                    "type": "quantitative",
                    "title": "Average Majority Votes",
                    "axis": {
                        "labelFontSize": 12,
                        "titleFontSize": 14
                    }
                },
                "color": {
                    "value": "#010066"
                },
                "tooltip": [
                    { "field": "state", "type": "nominal", "title": "State" },
                    {
                        "field": "average_majoriti",
                        "type": "quantitative",
                        "format": ",.0f",
                        "title": "Average Majority Votes",
                        "formatType": "number"
                    }
                ]
            }
        }
    ],
    "config": {
        "view": { "stroke": null },
        "axis": { "grid": false }
    }
}
